<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="35dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_user_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ico_person"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="99dp" />

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ico_name"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="159dp" />

            <EditText
                android:id="@+id/register_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/age"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ico_age"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="220dp" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ico_lock"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="281dp" />

            <Button
                android:id="@+id/register_register_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:text="@string/register"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="342dp" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>